<div class="login-form">
  <h2 class="login-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="email-field">
      <%= f.label :email, class: "email-label" %><br />
      <%= f.email_field :email, autofocus: true, class: "email-field" %>
    </div>

    <div class="password-field">
      <%= f.label :password, class: "password-label" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "password-field" %>
    </div>

   <!-- <#% if devise_mapping.rememberable? -%#>
      <div class="field">
        <#%= f.check_box :remember_me %>
        <#%= f.label :remember_me %>
      </div>
    <#% end -%#> -->

    <div class="login-button">
      <%= f.submit "Log in", class: "session-submit-button" %>
    </div>
  <% end %>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
</div>
<link rel="stylesheet" type="text/css" href="/css/custom.css">
