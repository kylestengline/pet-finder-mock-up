<div class="doge-info">
  <% @dogs.each do |d| %>
    <h2>Meet: <%= d.name %></h2>
    <h4><%= d.name %> is a <%= d.breed %></h4>
    <% if d.gender.titleize == "Female" %>
      <h4>She is <%= d.age %> years old.</h4>
    <% else %>
      <h4>He is <%= d.age %> years old.</h4>
    <% end %>
  <% end %>
</div>

<h5><%= link_to "Home Page", root_path %></h5>
