<h1>Showing All Dogs</h1>

<div class="doge-info">
  <% @dogs.each do |d| %>
    <h2 class="dog-name"><%= d.name %></h2>
    <div class="dog-photo">
      <%= image_tag d.photo, size: 250 %>
    </div>
    <h4 class="breed-name"><%= d.name %> is a <%= d.breed %></h4>
    <% if d.gender.titleize == "Female" %>
      <h4 class="dog-age">She is <%= d.age %> years old.</h4>
      <%= d.title_age %>
    <% else %>
      <h4 class="dog-age">He is <%= d.age %> years old.</h4>
      <%= d.title_age %>
    <% end %>
    <h4><%= link_to "Edit", edit_admin_dog_path(d.id) %></h4>
  <% end %>
</div>
<h4><%= link_to "Home Page", root_path %></h4>
<link rel="stylesheet" href="/css/custom.css">
